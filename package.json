{
  "name": "tb-core-api",
  "description": "ThinBlock's core API built on Restify",
  "version": "1.0.0",
  "author": "Hamza Baig",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinblock/tb-core-api"
  },
  "engines": {
    "node": "8.11.2"
  },
  "dependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.35",
    "@types/mongoose": "^4.7.2",
    "@types/restify": "^2.0.36",
    "@types/sequelize": "^4.27.23",
    "@types/sinon": "^1.16.34",
    "@types/supertest": "^2.0.0",
    "mongoose": "^4.7.5",
    "pg": "^7.4.3",
    "restify": "^4.1.1",
    "restify-joi-middleware": "^5.0.0",
    "sequelize": "^4.38.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.16",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "supertest": "^2.0.0",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4"
  },
  "scripts": {
    "lint": "tslint --project .",
    "build": "node_modules/.bin/tsc",
    "test": "npm run build && NODE_ENV='test' node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha test/**/*.spec.js",
